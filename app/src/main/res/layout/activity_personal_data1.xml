<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical"
        tools:context=".personal_data">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="٨dp"
            tools:layout_editor_absoluteY="٨dp">

            <TextView
                android:id="@+id/text_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="Personal data &amp; location"
                android:textColor="#25b5da"
                android:textSize="33sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Name:"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/enter_your_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your name"
                    android:textColorHint="#25b5da"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Phone number:"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/enter_your_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your number"
                    android:textColorHint="#25b5da"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Address:"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/enter_your_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter your address"
                    android:textColorHint="#25b5da"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Governorate:"
                    android:textColor="@color/white" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

            <Button
                android:id="@+id/personal_data_button_gps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"

                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/corner"
                android:text="GPS"
                android:textSize="20sp" />

            <Button
                android:id="@+id/personal_data_button_Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/corner"
                android:text="Submit"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>