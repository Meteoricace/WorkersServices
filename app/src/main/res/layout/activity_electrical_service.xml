<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/electricalService_textView_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="SERVICE TYPE"
        android:textColor="#25b5da"
        android:textSize="34sp" />

    <Button
        android:id="@+id/electricalService_button_electrical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="MAINTENANCE "
        android:textSize="20sp" />

    <Button
        android:id="@+id/electricalService_button_plumbing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="INSTALLATION"
        android:textSize="20sp" />

    <Button
        android:id="@+id/electricalService_button_cleaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="EMERGENCY WORK"
        android:textSize="20sp" />



</LinearLayout>